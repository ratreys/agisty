{
  "name": "ratreys/agisty",
  "description": "A hybrid WordPress theme focusing on readability, performance, and accessibility",
  "type": "wordpress-theme",
  "keywords": ["hybrid", "wordpress", "theme", "readability", "accessibility", "performance"],
  "homepage": "https://github.com/ratreys/agisty",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Rey Sanchez",
      "email": "reysanchez.me@gmail.com",
      "homepage": "https://selftawt.com",
      "role": "Lead Developer"
    },
    {
      "name": "Contributors",
      "homepage": "https://github.com/ratreys/agisty/graphs/contributors"
    }
  ],
  "require": {
    "php": ">=8.1",
    "composer/installers": "^2.0"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "pantheon-systems/pantheon-wp-coding-standards": "^2.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "phpstan/phpdoc-parser": "^2.1",
    "slevomat/coding-standard": "^8.18"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "composer/installers": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "lint": "vendor/bin/phpcs -s .",
    "lint-fix": "vendor/bin/phpcbf ."
  }
}

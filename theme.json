{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "color": {
      "background": false,
      "button": false,
      "caption": false,
      "custom": false,
      "customDuotone": false,
      "customGradient": false,
      "defaultDuotone": false,
      "defaultGradients": false,
      "defaultPalette": false,
      "heading": false,
      "link": false,
      "text": false,
      "duotone": null,
      "gradients": null,
      "palette": null
    },
    "dimensions": {
      "defaultAspectRatios": false,
      "aspectRatios": null
    },
    "shadow": {
      "defaultPresets": false,
      "presets": null
    },
    "spacing": {
      "customSpacingSize": false,
      "defaultSpacingSizes": false,
      "units": ["rem", "vh", "vw", "%"],
      "spacingScale": null
    },
    "typography": {
      "customFontSize": false,
      "defaultFontSizes": false,
      "dropCap": false,
      "fontStyle": false,
      "fontWeight": false,
      "letterSpacing": false,
      "lineHeight": false,
      "textAlign": false,
      "textDecoration": false,
      "textTransform": false,
      "writingMode": false,
      "fontSizes": null
    },
    "layout": {
      "contentSize": "736px",
      "wideSize": "1200px"
    },
    "custom": {
      "red": "rgb(87 3 12)",
      "blue": "rgb(3 12 87)",
      "gray": "rgb(77 77 77)",
      "link": "var(--wp--custom--blue)",
      "brand": "var(--wp--custom--red)",
      "black": "rgb(38 44 51)",
      "white": "rgb(250 250 250)",
      "focus": "rgb(250 200 100)",
      "green": "rgb(3 87 12)",
      "button": "var(--wp--custom--green)",
      "border": "rgb(from gray r g b / 30%)",
      "guides": "rgb(from gray r g b / 10%)"
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--custom--white)",
      "text": "var(--wp--custom--black)"
    },
    "elements": {
      "button": {
        "border": {
          "radius": ".5rem"
        },
        "color": {
          "background": "var(--wp--custom--button)",
          "text": "var(--wp--custom--white)"
        },
        "spacing": {
          "padding": {
            "top": "12px",
            "right": "20px",
            "bottom": "12px",
            "left": "20px"
          }
        },
        "typography": {
          "fontSize": "1rem",
          "lineHeight": "1.2"
        }
      }
    },
    "blocks": {
      "core/pullquote": {
        "typography": {
          "fontSize": "inherit",
          "lineHeight": "1.5"
        }
      }
    }
  }
}
